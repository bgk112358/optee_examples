#include <inttypes.h>
#include <secure_ta.h>
#include <tee_internal_api.h>
#include <tee_internal_api_extensions.h>

#include <key.h>
#include <store.h>

static TEE_Result Sm2Arithmetic(TEE_ObjectHandle key, uint32_t mode, const void *inbuf, uint32_t inbuf_len, void *outbuf, size_t *outbuf_len)
{
	TEE_Result res;

	TEE_OperationHandle op;
	TEE_ObjectInfo key_info;
	uint32_t alg = 0;
	
	EMSG("%s enter", __func__);

	if (!key)
		return TEE_ERROR_BAD_STATE;

	res = TEE_GetObjectInfo1(key, &key_info);
	if (res) {
		EMSG("TEE_GetObjectInfo1 error! res=0x%x", res);
		return res;
	}

	switch (mode)
	{
		case TEE_MODE_ENCRYPT:
		case TEE_MODE_DECRYPT:
			alg = TEE_ALG_SM2_PKE;
			break;
		case TEE_MODE_SIGN:
		case TEE_MODE_VERIFY:
			alg = TEE_ALG_SM2_DSA_SM3;
			break;
	}

	IMSG("[bxq] Sm2Arithmetic 1, alg = 0x%x, mode = 0x%x, key_info.keySize = %d", alg, mode, key_info.keySize);

	res = TEE_AllocateOperation(&op, alg, mode, /* key_info.keySize */ 256);
	if (res) {
		EMSG("TEE_AllocateTransientObject error! res=0x%x", res);
		return res;
	}

	IMSG("[bxq] Sm2Arithmetic 2");

	res = TEE_SetOperationKey(op, key);
	if (res) {
		EMSG("TEE_SetOperationKey error! res=0x%x", res);
		TEE_FreeOperation(op);
		return TEE_ERROR_BAD_STATE;
	}

	IMSG("[bxq] Sm2Arithmetic 3");

	switch (mode)
	{
		case TEE_MODE_ENCRYPT:
			IMSG("[bxq] Sm2Arithmetic 3");
			res = TEE_AsymmetricEncrypt(op, NULL, 0, inbuf, inbuf_len, outbuf, outbuf_len);
			if (res) {
				EMSG("TEE_AsymmetricEncrypt error! res=0x%x", res);
			}
			break;
		case TEE_MODE_DECRYPT:
			IMSG("[bxq] Sm2Arithmetic 4");
			res = TEE_AsymmetricDecrypt(op, NULL, 0, inbuf, inbuf_len, outbuf, outbuf_len);
			if (res) {
				EMSG("TEE_AsymmetricDecrypt error! res=0x%x", res);
			}
			break;
		case TEE_MODE_SIGN:
			IMSG("[bxq] Sm2Arithmetic 5");
			res = TEE_AsymmetricSignDigest(op, NULL, 0, inbuf, inbuf_len, outbuf, outbuf_len);
			if (res) {
				EMSG("TEE_AllocateTransientObject error! res=0x%x", res);
			}
			break;
		case TEE_MODE_VERIFY:
			IMSG("[bxq] Sm2Arithmetic 6");
			res = TEE_AsymmetricVerifyDigest(op, NULL, 0, inbuf, inbuf_len, outbuf, *outbuf_len);
			if (res) {
				EMSG("TEE_AsymmetricVerifyDigest error! res=0x%x", res);
			}
			break;
	}

	IMSG("[bxq] Sm2Arithmetic 7");

	TEE_FreeOperation(op);

	EMSG("%s exit", __func__);
	return res;
}

#define SM2(name1,name2) \
TEE_Result Sm2##name1(TEE_ObjectHandle key, const void *inbuf, uint32_t inbuf_len, void *outbuf, size_t *outbuf_len) \
{ \
	return Sm2Arithmetic(key, TEE_MODE_##name2, inbuf, inbuf_len, outbuf, outbuf_len); \
}

SM2(Enc, ENCRYPT)
SM2(Dec, DECRYPT)
SM2(Sign, SIGN)
SM2(Verify, VERIFY)

